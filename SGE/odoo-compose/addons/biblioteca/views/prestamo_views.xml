<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_prestamo_list" model="ir.ui.view">
        <field name="name">biblioteca.prestamo.list</field>
        <field name="model">biblioteca.prestamo</field>
        <field name="arch" type="xml">
            <list string="Préstamos" decoration-success="estado == 'devuelto'" decoration-info="estado == 'prestado'">
                <field name="libro_id"/>
                <field name="nombre_lector"/>
                <field name="fecha_prestamo"/>
                <field name="fecha_devolucion"/>
                <field name="dias_prestamo"/>
                <field name="estado" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_prestamo_form" model="ir.ui.view">
        <field name="name">biblioteca.prestamo.form</field>
        <field name="model">biblioteca.prestamo</field>
        <field name="arch" type="xml">
            <form string="Préstamo">
                <header>
                    <button name="action_marcar_devuelto" string="Marcar como Devuelto" type="object" class="oe_highlight" invisible="estado == 'devuelto'"/>
                    <field name="estado" widget="statusbar" statusbar_visible="prestado,devuelto"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="libro_id"/>
                            <field name="nombre_lector"/>
                        </group>
                        <group>
                            <field name="fecha_prestamo"/>
                            <field name="fecha_devolucion"/>
                            <field name="dias_prestamo" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_biblioteca_prestamo" model="ir.actions.act_window">
        <field name="name">Préstamos</field>
        <field name="res_model">biblioteca.prestamo</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>